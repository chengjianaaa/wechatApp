/* detail.wxss */
page{
	width:100%;
	height:100%;
}
.detail-container{
	width:100%;
	height:100%;
	position:relative;
}
.detail-image{
	width:756rpx;
	height:756rpx;
}
.content{
	width:100%;
	height:180rpx;
	border-bottom:1px solid #ccc;
	padding-left:30rpx;
	border-sizing:border-box;
}
.title{
	height:70rpx;
	font-size:30rpx;
	line-height:70rpx;
}
.price{
	color:red;
}
.desc{
	border-top:1px solid #ccc;
	line-height:70rpx;
	height:70rpx;
	display:flex;
	justify-content:space-between;
	padding:0 30rpx;
}
.desc-txt{
	font-size:24rpx;
	color:#ccc;
}
.bottom-menu{
	position:absolute;
	left:0;
	bottom:0;
	height:105rpx;
	width:100%;
	display:flex;
}
.menu{
	width:105rpx;
	height:100%;
	display:flex;
	flex-direction:column;
	align-items:center;
}
.menu-txt{
	font-size:20rpx;
}
.addcar{
	flex:1;
	line-height:105rpx;
	text-align:center;
	color:#fff;
	background:red;
}