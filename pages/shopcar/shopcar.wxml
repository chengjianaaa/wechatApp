<!--shopcar.wxml-->
<view class="chopcar-container">
	<view class="cartitle">
		<image class="choose" style="width: 40rpx; height: 40rpx;" mode="{{mode}}" src="{{choose}}"></image>
		<view class="title">鲜刻优选</view>
		<view class="edit">编辑</view>
	</view>
	<view class="carlist">
		<view class="item-box">
			<view class="item">
				<image class="choose" style="width: 40rpx; height: 40rpx;" mode="{{mode}}" src="{{choose}}"></image>
				<image class="choose" style="width: 192rpx; height: 192rpx; border:1px solid #ccc" mode="{{mode}}" src="{{car}}"></image>
				<view class="center">
					<text class="goodsname">精选猪尾巴500dg</text>
					<text class="buycount">¥<text class="buycount">57.00</text></text>
				</view>
				<text class="num">x<text class="count">2</text></text>
			</view>
		</view>
	</view>
	<view class="cartotal">
		<view class="totalleft">
			<image class="choose" style="width: 40rpx; height: 40rpx;" mode="{{mode}}" src="{{choose}}"></image><text class="basefz">全选</text>
			<view class="totall-box">
				<text class="basefz totall red">合计 :¥<text class="basefz red">57.00</text></text>
				<text class="basefz">不含运费</text>
			</view>
		</view>
		<view class="account">结算</view>
	</view>
</view>
