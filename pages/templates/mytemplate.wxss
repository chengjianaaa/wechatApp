.mask{
	position:absolute;
	left:0;
	right:0;
	top:0;
	bottom:0;
	background:rgba(0,0,0,.5);
	z-index:1000;
}
.board{
	height:400rpx;
	width:100%;
	position:absolute;
	bottom:0;
	left:0;
	display:flex;
	flex-direction:column;
	background:#fff;
}
.board-top{
	height:168rpx;
	width:100%;
	border-bottom:1px solid #ccc;
}
.board-middle{
	flex:1;
}
.board-bottom{
	height:105rpx;
	display:flex;

}
.board-bottom .btn{
	width:50%;
	height:105rpx;
	line-height:105rpx;
	color:#fff;
	text-align:center;
}